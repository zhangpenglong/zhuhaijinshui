page {
    background: #fff;
}

.pricebox {
    border-radius: 0.5rem;
    box-shadow: 0 1px 3px 2px rgba(0,0,0,0.2);
    font-size: 0.875rem;
    padding-bottom: 1.2rem;
}

.pricebox_tt {
    line-height: 1.5rem;
    height: 0.75rem;
    border-bottom: 1px solid #d1cdcd;
    width: 90%;
    margin: 0 auto 1.2rem;
}

.pricebox_tt text {
    display: inline-block;
    background: #fff;
    padding: 0 0.5rem;
}

.pricebox_tips {
    border: 1px solid #c6c6c6;
    padding: 0.35rem 0;
    line-height: 1.2rem;
}

.inputbox {
    border-radius: 0.3rem;
    background: #e8e8e8;
    border: 1px solid #dfdede;
    margin: 0.625rem 0;
    padding: 0 0.625rem;
    align-items: center;
}

.inputbox input {
    height: 2.4rem;
    line-height: 2.4rem;
}

.inputbox picker {
    height: 2.4rem;
    line-height: 2.4rem;
}

.radiobox {
    font-size: 0.75rem;
}

.radiobox radio {
    transform: scale(.5);
    width: 1.2rem;
}

.pricebox .btn {
    background: #f79c33;
    color: #fff;
    font-size: 0.875rem;
    line-height: 2.4rem;
    height: 2.4rem;
}

.pricebox_ad {
    padding-top: 1rem;
}

.pricebox_items {
    padding: 0 1.5rem;
}

.pricebox_items .item {
    justify-content: center;
    padding: 1.6rem 0;
    border-top: 1px solid #eaeaea;
    font-size: 0.75rem;
    color: #9c9c9c;
    line-height: 1.2rem;
    align-items: center;
}

.pricebox_items .item:first-child {
    border: none;
}

.pricebox_items .item image {
    width: 4rem;
}

.pricebox_items .item image:nth-child(1) {
    margin-right: 2.5rem;
}

.pricebox_items .item .item_cc:first-child {
    text-align: right;
    margin-right: 2.5rem;
}

.pricebox_items .item .item_cc view:first-child {
    color: #333;
}

.pricebox_nav_tt {
    font-size: 0.875rem;
    line-height: 1.5rem;
    color: #333;
}

.pricebox_nav_tt text {
    color: #ed7682;
}

.pricebox_nav_box {
    padding: 0.625rem 1.3rem;
    flex-wrap: wrap;
}

.pricebox_nav_box .item {
    width: 50%;
    font-size: 0.75rem;
    color: #999;
    line-height: 1.3rem;
    padding-bottom: 0.625rem;
}

.pricebox_nav_box .item image {
    width: 4rem;
}

.pricebox_nav_box .item .name {
    font-size: 0.875rem;
    color: #333;
}